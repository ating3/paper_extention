{
    "name": "Paper Assistant Extension",
    "description": "Base Level Extension for assisting with academic paper reading",
    "version": "1.0",
    "permissions": ["storage", "activeTab"],
    "manifest_version": 3,
    "content_scripts":[
        {
            "matches": ["<all_urls>"],
            "js":["/scripts/read_content.js"]
        }
    ],
    "action": {
        "default_popup": "paper_extension.html",
        "default_icon" : "PA.png"
    }
}